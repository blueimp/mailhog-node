{
  "name": "mailhog",
  "version": "4.4.0",
  "title": "MailHog NodeJS library",
  "description": "A NodeJS library to interact with the MailHog API",
  "keywords": [
    "mailhog",
    "nodejs",
    "library",
    "api"
  ],
  "homepage": "https://github.com/blueimp/mailhog-node",
  "author": {
    "name": "Sebastian Tschan",
    "url": "https://blueimp.net"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blueimp/mailhog-node.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "optionalDependencies": {
    "iconv-lite": "^0.4.24"
  },
  "devDependencies": {
    "@types/mocha": "5",
    "@types/node": "12",
    "eslint": "6",
    "eslint-config-blueimp": "1",
    "eslint-config-prettier": "6",
    "eslint-plugin-jsdoc": "15",
    "eslint-plugin-node": "9",
    "eslint-plugin-prettier": "3",
    "prettier": "1",
    "typescript": "3"
  },
  "eslintConfig": {
    "extends": [
      "blueimp",
      "plugin:jsdoc/recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "pretest": "eslint . && tsc",
    "test": "docker-compose run --rm test",
    "posttest": "docker-compose down",
    "preversion": "npm test",
    "postversion": "git push --tags origin HEAD && npm publish"
  },
  "files": [
    "libqp/index.js",
    "index.js"
  ],
  "main": "index.js"
}
